<script type="module" src="/src/index.js"></script>
<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<div id="loadOverlay" style="background-color:white; position:absolute; top:0px; left:0px; width:100%; height:100%; z-index:2000;"></div>
<% if(session.username) { %>
  <%- include('reviewModal'); -%>
  <div id="blur">
<% } else { %>
  <div>
<% } %>
  <%- include('header'); -%>
  <div class="section-3">
    <div class="header headerCat">
      <div class="headerTitle">
        <h2><%= categoryName%></h2>
        <span>Whatever you want, we got it</span>
      </div>
    </div>
    <div class="section-3-grid">
      <div class="section-3-col">
        <% for(let j = 0; j < products.length; j++) { %>
        <div class="section-3-grid-element">
          <div class="container">
            <div class="card">
              <div class="content-1" data-pid="<%= products[j].product_id %>" data-pn="<%= products[j].pname %>" data-pc="<%= products[j].category %>" data-pr="<%= products[j].rating %>"">
                <div class="mainImage">
                  <img src="<%= products[j].image_link%>" alt="">
                </div>
              </div>
              <div class="content-2">
                <div class="kind">
                  <span><%= products[j].pname%></span>
                  <h4><%= products[j].category%></h4>
                </div>
                <div class="description">
                  <p>Quantity Left: <%= products[j].stock%></p>
                </div>
                <div class="price">
                  <span>$</span>
                  <span><%= parseFloat(products[j].price).toFixed(2)%></span>
                  <div class="space"></div>
                  <button data-choice="<%= JSON.stringify(products[j]) %>" class="add-to-cart btn">Add to Cart</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <%- include('footer'); -%>
</div>

