
<% const pick0a = ["Top Picks", "Healthy"];
   const pick1a = ["Our Customers Favourites", "Our Healthiest Selections"]; %>

<div class="section-3">
    <% for(let i = 0; i < 2; i++) { %>
    <div class="header">
      <div class="headerTitle">
        <h2><%= pick0a[i] %></h2>
        <span><%= pick1a[i] %></span>
      </div>
    </div>
    <div class="section-3-grid">
      <div class="section-3-col">
        <% for(let j = 0; j < 4; j++) { %>
        <div class="section-3-grid-element">
          <div class="container">
            <div class="card">
              <div class="content-1">
                <div class="mainImage">
                  <img src="assets/fruits-12112.png" alt="">
                </div>
              </div>
              
              <div class="content-2">
                <div class="kind">
                  <span><%= products[pick0a[i]][j].product_name%></span>
                  <h4><%= products[pick0a[i]][j].product_category%></h4>
                </div>
                <div class="description">
                  <p><%= products[pick0a[i]][j].product_description%></p>
                </div>
                <div class="price">
                  <span>$</span>
                  <span><%= parseFloat(products[pick0a[i]][j].product_price).toFixed(2)%></span>
                  <div class="space"></div>
                  <button class="btn">Add to Cart</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
      <% } %>
  </div>


